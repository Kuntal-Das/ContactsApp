<UserControl x:Class="ContactsApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <UserControl.Resources>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="NameTxtBx"
                   Text="{Binding Name}"
                   FontSize="20"
                   FontWeight="Bold"
                   Grid.Row="0"/>
        <TextBlock x:Name="EmailTxtBx"
                   Text="{Binding Email}"
                   FontSize="15"
                   Foreground="DodgerBlue"
                   Grid.Row="1"/>
        <TextBlock x:Name="PhoneNTxtBx"
                   Text="{Binding PhoneNo}"
                   FontSize="15"
                   FontStyle="Italic"
                   Grid.Row="3"/>
    </Grid>
</UserControl>
